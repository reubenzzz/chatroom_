rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // only authenticated users can read/write
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // rooms collection: only authenticated users can create rooms
    match /rooms/{roomId} {
      allow read: if true; // allow public read of rooms list (optional)
      allow create: if request.auth != null && request.resource.data.name is string;
      allow update, delete: if request.auth.uid == resource.data.createdBy; // only owner can modify/delete
    }

    // messages subcollection
    match /rooms/{roomId}/messages/{messageId} {
      allow create: if request.auth != null
                    && request.resource.data.text is string
                    && request.resource.data.createdAt == request.time;
      allow read: if request.auth != null;
      allow delete: if request.auth.uid == resource.data.uid; // delete own messages
    }

    // user profiles (optional)
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }
  }
}
