rules_version = '2';
service cloud.firestore {
match /databases/{database}/documents {


match /rooms/{roomId} {
allow read: if true;
allow create: if request.auth != null;
allow update, delete: if false; // only use server admin tools to remove rooms
}


match /messages/{messageId} {
allow read: if true;
allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
allow delete: if false; // keep messages immutable unless admin
}
}
}
